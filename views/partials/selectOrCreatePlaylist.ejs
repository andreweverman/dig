<div class="col form-group row justify-content-center mb-4" id="radios">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
            value="existingPlaylist" checked>
        <label class="form-check-label" for="inlineRadio1">Select an existing playlist</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="newPlaylist"
            required>
        <label class="form-check-label" for="inlineRadio2">Create a new playlist</label>
    </div>
</div>

<div id='playlistInputs'>
    <div class="col-md-6  form-group " id="existingPlaylist">
        <select multiple name="playlistID" class="form-control" id="existingSelect" required>
            <% playlists.forEach(list=> { %>
                <option value="<%=list.id%>">
                    <%=list.name%>
                </option>
                <%});%>
        </select>

        <div class="invalid-feedback">
            Please provide an existing playlist or choose to create a new one.
        </div>
    </div>

    <div class="col-md-6 form-group " id="newPlaylist">
        <label for="newInput" class="form-label">New playlist name</label>
        <input name="newPlaylistName" type="text" class="form-control" id="newInput">
        <div class="invalid-feedback">
            Please provide a valid playlist name.
        </div>
    </div>
</div>


<script src="/public/javascripts/partials/selectOrCreatePlaylist.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="/public/stylesheets/partials/selectOrCreatePlaylist.css">