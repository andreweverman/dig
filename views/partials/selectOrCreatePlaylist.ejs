<form>
    <div class="existingPlaylist">

        <div class="form-check">
            <input class="form-check-input" type="radio" name="selectType" id="selectType1" value="existing" checked>
            <label class="form-check-label" for="selectType1">
                Existing playlist
            </label>
        <div class="form-group reveal-if-active">
            <label for="existingPlaylist">Select an existing playlist to use as Dig</label>
            <select multiple class="form-control" id="existingPlaylistSelect">

                <% playlists.forEach(list=> { %>
                    <option value="<%=list.id%>">
                        <%=list.name%>
                    </option>
                    <%});%>
            </select>
        </div>
    </div>
    <div class="newPlaylist"></div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="selectType" id="selectType2" value="new">
        <label class="form-check-label" for="selectType2">
            New playlist
        </label>
    </div>

    <div>
        <div class="form-group row reveal-if-active">
            <label for="newPlaylist" class="col-sm-2 col-form-label">New playlist name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="colFormLabel" placeholder="dig">
            </div>
        </div>

</form>
<ul class="list-group existing_playlists">
</ul>
<script src="/public/javascripts/partials/selectOrCreatePlaylist.js" type="text/javascript"></script>