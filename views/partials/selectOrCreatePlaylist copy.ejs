<div class="row playlist_options">
   
    <div class="existing_playlist col-sm">
        <h3>Choose an exsisting playlist:</h3>

        <ul class="list-group existing_playlists">
            <% playlists.forEach(list=> { %>
                <button class="list-group-item list-group-item-dark playlist_item py-1" value="<%=list.id%>">
                    <%=list.name%>
                </button>
                <%});%>
        </ul>

        <button class="btn btn-primary playlist_button" id="submit_existing_playlist" disabled>Submit</button>
    </div>
    <div class="create_new_playlist col-sm">
        <h3>Create new playlist:</h3>
        <input type="text" class="create_playlist" id="create_playlist_text" placeholder="descriptiveName"><br>
        <button class="btn btn-primary playlist_button" id="create_playlist_submit" disabled>Create Playlist</button>

    </div>

</div>
<div id="service_route" data-val=<%=service.serviceRoute%>></div>

<script src="/public/javascripts/partials/selectOrCreatePlaylist.js" type="text/javascript"></script>