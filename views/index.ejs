<% if (!user) {%>
<h2>Welcome! Please log in.</h2>
<p><a href="/login">Login</a></p>
<%} else{ %>
<h2>Hello, <%= user.display_name%>.</h2>

<h3> Your services: <%=user.services%> </h3>

<form action="/enable_dig">
    <button type="submit">Enable Dig</button>
</form>
<!-- <form action="/refresh_token">
    <button type="submit">Refresh Token</button>
</form> -->
<button class="btn btn-default" id="obtain-new-token">Obtain new token using the refresh token</button>


<h2>oAuth info</h2>
<dl class="dl-horizontal">
    <dt>Access token</dt>
    <dd id= "access_token" class="text-overflow"><%=user.access_token%></dd>
    <dt>Refresh token</dt>
    <dd id= "refresh_token" class="text-overflow"><%=user.refresh_token%></dd>
</dl>

<script src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0-alpha.1/handlebars.min.js"></script>
<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<script src= "/public/javascripts/index.js"  type="text/javascript"></script>


<% } %>